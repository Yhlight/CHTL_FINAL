[Custom] @Style BoxStyle {
    border: 1px solid black;
    padding: 10px;
    margin: 15px;
    background-color: #eee;
}

html {
    body {
        div {
            style {
                @Style BoxStyle {
                    delete border, margin;
                }
            }
            text { "This box should have padding and a background, but no border or margin." }
        }
    }
}
