// Define a base template for text
[Template] @Style BaseText
{
    font-family: sans-serif;
    font-size: 16px;
    color: black;
}

// Define a more specific template that inherits from the base
[Template] @Style TitleText
{
    @Style BaseText; // Inherit from BaseText
    font-size: 32px; // Override the font-size
    font-weight: bold; // Add a new property
}

html
{
    head
    {
        title { text { "Template Test" } }
    }

    body
    {
        // This div should get all styles from TitleText,
        // including the inherited ones from BaseText,
        // with the override applied.
        div
        {
            style {
                @Style TitleText;
                border: 1px solid grey; // Also add a local property
            }

            text { "This is a title" }
        }
    }
}
