html
{
    head
    {
        title { text { "Attribute Referencing Test" } }
    }

    body
    {
        div
        {
            id: "box1";
            style {
                width: 100px;
                height: 200px;
            }
        }

        // This div should get its width from #box1
        div
        {
            id: "box2";
            style {
                // Reference the width of #box1 and divide by 2
                width: #box1.width / 2; // Expected: 50px
            }
        }

        // This div should get its height from #box1 as well
        div
        {
            id: "box3";
            style {
                height: #box1.height + 20px; // Expected: 220px
            }
        }
    }
}
