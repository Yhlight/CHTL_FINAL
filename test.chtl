# A test for local style blocks

div {
    id: "styled-box";

    style {
        // These are inline styles
        width: 100px;
        height: 100px;
        background-color: blue;

        // This is a global rule
        .box-title {
            font-size: 16px;
            color: white;
        }

        // This should also be a global rule
        &:hover {
            background-color: darkblue;
        }
    }

    span {
        class: "box-title";
        text { Title }
    }
}
