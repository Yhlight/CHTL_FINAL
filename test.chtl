[Template] @Element TwoBoxes {
    div {
        class: "box";
        text { "First box" }
    }
    div {
        class: "box";
        text { "Second box" }
    }
}

html {
    body {
        @Element TwoBoxes {
            // This should target the *second* div (index 1)
            div[1] {
                style {
                    border: 2px solid red;
                }
            }
        }
    }
}
