use html5;

[Template] @Var Theme
{
    mainColor: "blue";
    secondaryColor: "gray";
    defaultPadding: 10px;
}

body
{
    style
    {
        background-color: Theme(secondaryColor);
        padding: Theme(defaultPadding);
        // Test specialization
        border: 1px solid Theme(mainColor = "red");
    }

    h1
    {
        text: "Variable Group Test";
        style
        {
            color: Theme(mainColor);
        }
    }
}
