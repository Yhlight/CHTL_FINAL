html {
    head {
        title { "My Website" }
    }
    body {
        div {
            // This style block will auto-add class="box" to the div
            // and elevate the rule to a global <style> tag.
            style {
                .box {
                    border: 1px solid black;
                    padding: 10px;
                }
            }

            text {
                "This div should have a border."
            }
        }
    }
}
