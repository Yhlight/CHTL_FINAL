[Custom] @Style TextSet {
    color,
    font-size;
    font-weight: bold; // A regular property
}

html {
    body {
        p {
            style {
                @Style TextSet {
                    color: red;
                    font-size: 20px;
                }
            }
            text { "This text uses the custom style." }
        }
    }
}
