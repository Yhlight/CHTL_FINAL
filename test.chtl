[Template] @Element Card {
    div {
        class: "card";
        style {
            padding: 10px;
        }
        h3 {
            text { "Default Title" }
        }
    }
}

html {
    body {
        // Use the template with specialization
        @Element Card {
            div {
                style {
                    background-color: #f0f0f0;
                    .card {
                        border-radius: 5px;
                    }
                }
            }
        }
    }
}
