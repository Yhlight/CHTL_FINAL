html
{
    head
    {
        title { text { "Conditional Expressions Test" } }
    }

    body
    {
        div { id: "ref"; style { width: 200px; } }

        // Test 1: Simple conditional, should be true
        div
        {
            id: "test1";
            style {
                width: 100px;
                color: width > 50px ? 'red' : 'blue'; // Expected: 'red'
            }
        }

        // Test 2: Simple conditional, should be false
        div
        {
            id: "test2";
            style {
                width: 40px;
                color: width > 50px ? 'red' : 'blue'; // Expected: 'blue'
            }
        }

        // Test 3: Logical AND, should be true
        div
        {
            id: "test3";
            style {
                width: 60px;
                height: 60px;
                border: width > 50px && height > 50px ? '1px solid green' : 'none'; // Expected: '1px solid green'
            }
        }

        // Test 4: Reference another element, should be true
        div
        {
            id: "test4";
            style {
                background-color: #ref.width > 100px ? 'green' : 'yellow'; // Expected: 'green'
            }
        }
    }
}
