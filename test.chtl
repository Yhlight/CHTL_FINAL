[Template] @Var Theme {
    primaryColor: #007bff;
    secondaryColor: #6c757d;
    baseFontSize: 16px;
}

html {
    body {
        div {
            style {
                color: Theme(primaryColor);
                font-size: Theme(baseFontSize);
                border: 1px solid Theme(secondaryColor);
            }
        }
    }
}
