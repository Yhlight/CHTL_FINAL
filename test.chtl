use html5;

[Import] @Style from "styles.css";

[Namespace] mySpace
{
    div
    {
        id: main-box;
        class: container;

        style
        {
            width: 100px + 50px;
            height: 2 * 25px;
            border: 1px solid black;
        }

        p
        {
            text: "This is the content.";
        }
    }
}

[Origin @Html]
{
    <hr>
    <p>This is a raw HTML block.</p>
}

div
{
    id: footer;
    text: "Footer text here.";
    style
    {
        // Reference property from another element
        margin-top: #main-box.height + 10px;
    }
    script
    {
        // CHTL JS Block
        {{#footer}}.listen {
            click: () => {
                console.log("Footer clicked!");
            }
        };
    }
}
