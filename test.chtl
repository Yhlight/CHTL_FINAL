[Template] @Var Theme {
    mainColor: red;
}

[Template] @Style BoxStyle {
    border: 1px solid black;
    padding: 10px;
}

[Template] @Element MyBox {
    div {
        class: box;
        text { A box }
    }
}

div {
    id: "app";
    color: Theme(mainColor); // Var usage

    style {
        @Style BoxStyle; // Style usage
        background-color: white;
    }

    @Element MyBox; // Element usage
}
