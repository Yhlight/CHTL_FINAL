[Import] @Chtl from "imported_styles.chtl";

style {
    /* This is a global style block */
    body {
        font-family: sans-serif;
    }
}

[Template] @Style BaseText {
    color: #333;
    font-size: 14px;
    line-height: 1.6;
}

[Template] @Var Theme {
    mainColor: #f0f0f0;
    specialFont: "Courier New";
}

div {
    id: "main-container";

    style {
        @Style ImportedStyles;
        background-color: Theme(mainColor);
        width: 100px + 50px;

        .header {
            font-family: Theme(specialFont);
            font-size: 24px;
        }
    }

    h1 {
        class: "header";
        style {
            @Style BaseText {
                delete font-size;
                color: darkblue;
            }
        }
        text { "Hello, CHTL!" }
    }

    p {
        text { "This is a test of the CHTL compiler." }
    }

    script {
        {{.header}}->listen {
            click: () => {
                console.log("Header clicked!");
            }
        }
    }
}
