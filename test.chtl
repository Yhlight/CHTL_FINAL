div
{
    id: test-box;
    style {
        width: 100px;
        height: 100px;
        background-color: blue;
        transition: all 1s;
    }
    text: "Click Me";
}

script
{
    const box = {{#test-box}};

    box->listen {
        click: () => {
            const anim = animate {
                target: box,
                duration: 1000,
                easing: "ease-in-out",
                begin: {
                    transform: 'scale(1) rotate(0deg)',
                    backgroundColor: 'blue'
                },
                end: {
                    transform: 'scale(1.5) rotate(180deg)',
                    backgroundColor: 'red'
                }
            };
        }
    };
}
