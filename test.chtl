// Import a file that has its own namespace
[Import] @Chtl from "../../../templates.chtl";

// Import a file that does NOT have its own namespace
[Import] @Chtl from "../../../vars.chtl";

html {
    head {
        title { "Import & Namespace Test" }
    }
    body {
        h1 { "Using an imported template" }
        @Element MyBox from MyStuff;

        div {
            style {
                // Use the variable from the 'vars.chtl' file,
                // which should be in the 'vars' namespace automatically.
                background-color: Colors(highlight) from vars;
            }
            text { "This div should have a yellow background." }
        }
    }
}
