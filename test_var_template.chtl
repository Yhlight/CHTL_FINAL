[Template] @Var Theme
{
    brand-color: "blue";
    text-color: "white";
    base-padding: 10px;
}

html {
    body {
        div {
            style {
                background-color: Theme(brand-color);
                color: Theme(text-color);
                padding: Theme(base-padding) * 2;
            }
        }
    }
}
