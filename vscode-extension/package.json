{
  "name": "chtl-language",
  "displayName": "CHTL Language Support",
  "description": "Language support for CHTL (C++ HyperText Language)",
  "version": "1.0.0",
  "publisher": "chtl-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "chtl",
    "hypertext",
    "html",
    "css",
    "javascript",
    "template",
    "custom"
  ],
  "activationEvents": [
    "onLanguage:chtl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chtl",
        "aliases": [
          "CHTL",
          "chtl"
        ],
        "extensions": [
          ".chtl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chtl",
        "scopeName": "source.chtl",
        "path": "./syntaxes/chtl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "chtl",
        "path": "./snippets/chtl.json"
      }
    ],
    "commands": [
      {
        "command": "chtl.compile",
        "title": "Compile CHTL",
        "category": "CHTL"
      },
      {
        "command": "chtl.parse",
        "title": "Parse CHTL",
        "category": "CHTL"
      },
      {
        "command": "chtl.format",
        "title": "Format Document",
        "category": "CHTL"
      },
      {
        "command": "chtl.lint",
        "title": "Lint Document",
        "category": "CHTL"
      },
      {
        "command": "chtl.preview",
        "title": "Preview HTML",
        "category": "CHTL"
      },
      {
        "command": "chtl.export",
        "title": "Export HTML",
        "category": "CHTL"
      },
      {
        "command": "chtl.build",
        "title": "Build Project",
        "category": "CHTL"
      },
      {
        "command": "chtl.clean",
        "title": "Clean Project",
        "category": "CHTL"
      },
      {
        "command": "chtl.test",
        "title": "Run Tests",
        "category": "CHTL"
      },
      {
        "command": "chtl.serve",
        "title": "Start Server",
        "category": "CHTL"
      },
      {
        "command": "chtl.watch",
        "title": "Watch Files",
        "category": "CHTL"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "chtl.compile",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.parse",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.format",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.lint",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.preview",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.export",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        }
      ],
      "explorer/context": [
        {
          "command": "chtl.build",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.clean",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.test",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.serve",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.watch",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        }
      ],
      "commandPalette": [
        {
          "command": "chtl.compile",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.parse",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.format",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.lint",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.preview",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.export",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.build",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.clean",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.test",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.serve",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.watch",
          "when": "resourceExtname == .chtl"
        }
      ]
    },
    "keybindings": [
      {
        "command": "chtl.compile",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus && resourceExtname == .chtl"
      },
      {
        "command": "chtl.format",
        "key": "ctrl+shift+f",
        "when": "editorTextFocus && resourceExtname == .chtl"
      },
      {
        "command": "chtl.preview",
        "key": "ctrl+shift+p",
        "when": "editorTextFocus && resourceExtname == .chtl"
      }
    ],
    "configuration": {
      "title": "CHTL",
      "properties": {
        "chtl.compiler.path": {
          "type": "string",
          "default": "chtl",
          "description": "Path to the CHTL compiler executable"
        },
        "chtl.compiler.options": {
          "type": "array",
          "default": [],
          "description": "Additional options to pass to the CHTL compiler"
        },
        "chtl.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable CHTL formatting"
        },
        "chtl.lint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable CHTL linting"
        },
        "chtl.preview.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open preview when compiling"
        },
        "chtl.preview.port": {
          "type": "number",
          "default": 3000,
          "description": "Port for the preview server"
        },
        "chtl.watch.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable file watching"
        },
        "chtl.watch.pattern": {
          "type": "string",
          "default": "**/*.chtl",
          "description": "File pattern to watch"
        }
      }
    },
    "views": {
      "chtl": [
        {
          "id": "chtl.templates",
          "name": "Templates",
          "when": "resourceExtname == .chtl"
        },
        {
          "id": "chtl.customs",
          "name": "Customs",
          "when": "resourceExtname == .chtl"
        },
        {
          "id": "chtl.imports",
          "name": "Imports",
          "when": "resourceExtname == .chtl"
        },
        {
          "id": "chtl.modules",
          "name": "Modules",
          "when": "resourceExtname == .chtl"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chtl",
          "title": "CHTL",
          "icon": "resources/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}