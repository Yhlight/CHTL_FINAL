{
  "name": "chtl-language-support",
  "displayName": "CHTL Language Support",
  "description": "Complete language support for CHTL template language",
  "version": "1.0.0",
  "publisher": "chtl-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "chtl",
    "template",
    "html",
    "css",
    "javascript"
  ],
  "activationEvents": [
    "onLanguage:chtl",
    "onLanguage:chtljs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chtl",
        "aliases": ["CHTL", "chtl"],
        "extensions": [".chtl"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "chtljs",
        "aliases": ["CHTL JS", "chtljs"],
        "extensions": [".chtljs", ".cjjs"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chtl",
        "scopeName": "source.chtl",
        "path": "./syntaxes/chtl.tmGrammar.json"
      },
      {
        "language": "chtljs",
        "scopeName": "source.chtljs",
        "path": "./syntaxes/chtljs.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "chtl",
        "path": "./snippets/chtl.json"
      },
      {
        "language": "chtljs",
        "path": "./snippets/chtljs.json"
      }
    ],
    "commands": [
      {
        "command": "chtl.compile",
        "title": "Compile CHTL",
        "category": "CHTL"
      },
      {
        "command": "chtl.compileJS",
        "title": "Compile CHTL JS",
        "category": "CHTL"
      },
      {
        "command": "chtl.preview",
        "title": "Preview CHTL",
        "category": "CHTL"
      },
      {
        "command": "chtl.build",
        "title": "Build CHTL Project",
        "category": "CHTL"
      },
      {
        "command": "chtl.watch",
        "title": "Watch CHTL Files",
        "category": "CHTL"
      },
      {
        "command": "chtl.clean",
        "title": "Clean CHTL Build",
        "category": "CHTL"
      },
      {
        "command": "chtl.init",
        "title": "Initialize CHTL Project",
        "category": "CHTL"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "chtl.compile",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.compileJS",
          "when": "resourceExtname == .chtljs",
          "group": "chtl"
        },
        {
          "command": "chtl.preview",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        }
      ],
      "editor/context": [
        {
          "command": "chtl.compile",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        },
        {
          "command": "chtl.compileJS",
          "when": "resourceExtname == .chtljs",
          "group": "chtl"
        },
        {
          "command": "chtl.preview",
          "when": "resourceExtname == .chtl",
          "group": "chtl"
        }
      ],
      "commandPalette": [
        {
          "command": "chtl.compile",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.compileJS",
          "when": "resourceExtname == .chtljs"
        },
        {
          "command": "chtl.preview",
          "when": "resourceExtname == .chtl"
        },
        {
          "command": "chtl.build"
        },
        {
          "command": "chtl.watch"
        },
        {
          "command": "chtl.clean"
        },
        {
          "command": "chtl.init"
        }
      ]
    },
    "keybindings": [
      {
        "command": "chtl.compile",
        "key": "ctrl+shift+c",
        "when": "resourceExtname == .chtl"
      },
      {
        "command": "chtl.compileJS",
        "key": "ctrl+shift+j",
        "when": "resourceExtname == .chtljs"
      },
      {
        "command": "chtl.preview",
        "key": "ctrl+shift+p",
        "when": "resourceExtname == .chtl"
      },
      {
        "command": "chtl.build",
        "key": "ctrl+shift+b"
      }
    ],
    "configuration": {
      "title": "CHTL",
      "properties": {
        "chtl.compilerPath": {
          "type": "string",
          "default": "./build/working_chtl_compiler",
          "description": "Path to CHTL compiler executable"
        },
        "chtl.jsCompilerPath": {
          "type": "string",
          "default": "./build/chtl_js_compiler",
          "description": "Path to CHTL JS compiler executable"
        },
        "chtl.autoCompile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically compile CHTL files on save"
        },
        "chtl.autoPreview": {
          "type": "boolean",
          "default": false,
          "description": "Automatically preview CHTL files after compilation"
        },
        "chtl.outputDirectory": {
          "type": "string",
          "default": "./build",
          "description": "Directory for compiled output files"
        },
        "chtl.watchMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable watch mode for automatic recompilation"
        },
        "chtl.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable CHTL linting and error checking"
        },
        "chtl.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense for CHTL files"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "chtlExplorer",
          "name": "CHTL Explorer",
          "when": "workspaceHasChtlFiles"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chtl",
          "title": "CHTL",
          "icon": "$(file-code)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  }
}