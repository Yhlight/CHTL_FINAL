html {
    head {
        title { text { "CHTL Test Page" } }
        style {
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 20px;
            }
        }
    }
    body {
        div {
            text { "Hello from CHTL!" }
            style {
                color: blue;
                font-size: 24px;
                text-align: center;
                margin-top: 50px;
            }
        }
        
        button {
            text { "Click Me" }
            style {
                background-color: #007bff;
                color: white;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                border-radius: 4px;
            }
        }
    }
}