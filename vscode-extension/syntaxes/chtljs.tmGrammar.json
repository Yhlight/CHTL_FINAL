{
  "scopeName": "source.chtljs",
  "fileTypes": ["cjjs", "cjmod"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.chtljs",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.chtljs",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.chtljs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.chtljs",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.chtljs",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.chtljs",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.chtljs",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.chtljs",
          "match": "\\b(listen|animate|delegate|router|fileloader|vir|iNeverAway|util|script|function|if|else|for|while|return|var|let|const|class|interface|type|enum)\\b"
        },
        {
          "name": "keyword.other.chtljs",
          "match": "\\b(click|hover|focus|blur|change|submit|load|unload|resize|scroll|keydown|keyup|keypress|mousedown|mouseup|mousemove|mouseover|mouseout)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.chtljs",
          "match": "\\b\\w+\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.chtljs"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.chtljs",
          "match": "[:=+\\-*/%<>!&|\\?\\->]"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.chtljs",
          "match": "\\$\\w+\\$"
        }
      ]
    }
  }
}