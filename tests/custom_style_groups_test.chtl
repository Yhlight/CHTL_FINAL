// Test file for [Custom] @Style groups

// 1. Base template
[Template] @Style Base {
    font-size: 16px;
    color: black;
}

// 2. Custom template with placeholders
[Custom] @Style CustomText {
    font-family; // placeholder
    line-height: 1.6;
    color; // placeholder
}

// 3. Custom template inheriting and specializing another
[Custom] @Style WarningText {
    @Style Base { // Inherits from Base
        delete color; // Deletes a property from the inherited template
    }
    font-style: italic; // Adds a new property
    color: orange; // Overrides a property (though it was deleted, this adds it back)
}

// 4. Using the templates

html {
    body {
        // Test placeholder fulfillment
        p {
            style {
                @Style CustomText {
                    font-family: "Arial";
                    color: blue;
                }
            }
            text: "This text uses a custom template with placeholders.";
        }

        // Test inheritance and specialization
        p {
            style {
                @Style WarningText;
            }
            text: "This is a warning text.";
        }

        // Test usage-time delete
        p {
            style {
                @Style WarningText {
                    delete font-style;
                }
            }
            text: "This is a warning text with one style deleted.";
        }
    }
}
