// This is a test file for the CHTL Unified Scanner.

style {
    /* This is a global style block. It should be a CSS chunk. */
    body {
        margin: 0;
        padding: 0;
    }
}

html {
    body {
        div {
            id: main_content;

            style {
                /* This is a local style block. It should be a CHTL chunk. */
                width: 100%;
            }

            script {
                // This is a script block with mixed JS and CHTL JS.
                const element = document.getElementById('main_content');

                listen {
                    click: () => {
                        console.log("Element clicked!");
                    }
                }

                if (element) {
                    element.innerHTML = {{ "Hello from CHTL JS!" }};
                }
            }
        }
    }
}
