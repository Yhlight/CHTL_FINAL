// CHTL part to define the structure
html {
    head {
        title { text { "Router Test" } }
    }
    body {
        div { id: "app-container";
            h1 { text { "Router Test" } }
            nav {
                a { href: "/"; text { "Home" } }
                a { href: "/about"; text { "About" } }
                a { href: "/contact"; text { "Contact" } }
            }
            main {
                div { id: "home-page"; style { display: none; } text { "This is the Home Page" } }
                div { id: "about-page"; style { display: none; } text { "This is the About Page" } }
                div { id: "contact-page"; style { display: none; } text { "This is the Contact Page" } }
            }
        }
    }
}

// CHTL JS part to define the logic
script {
    Router {
        mode: "hash",
        root: {{#app-container}},

        // Mix of syntaxes for testing
        url: "/",
        page: {{#home-page}},

        page: { "/about", {{#about-page}} },
        page: { "/contact", {{#contact-page}} }
    }
}
