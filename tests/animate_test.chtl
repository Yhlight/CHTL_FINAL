html {
    body {
        div {
            id: "animated-box";
            style {
                width: 100px;
                height: 100px;
                background-color: blue;
            }
        }

        script {
            animate {
                target: {{#animated-box}},
                duration: 2000,
                easing: "ease-in-out",
                loop: 2,
                direction: "alternate",

                begin: {
                    background-color: "blue",
                    transform: "scale(1)"
                },

                end: {
                    background-color: "red",
                    transform: "scale(1.5)"
                }
            }
        }
    }
}
