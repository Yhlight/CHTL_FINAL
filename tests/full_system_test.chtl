div {
    id: "main-app";

    h1 {
        text: "CHTL System Test";
    }

    div {
        class: "box";
        style {
            width: 100px;
            height: 100px;
            background-color: blue;
        }
    }

    button {
        class: "my-button";
        text: "Click Me";
    }

    script {
        // Vir declaration
        vir my_listener = {{.my-button}}->listen {
            click: () => { console.log('Button clicked!'); },
            mouseenter: () => { console.log('Mouse entered!'); }
        };

        // Animate block
        animate {
            target: {{.box}},
            duration: 1000,
            easing: "ease-in-out",
            when: [
                { at: 0.5, opacity: 1 },
                { at: 1.0, opacity: 0 }
            ],
            callback: () => { console.log('Animation finished!'); }
        }

        // Standalone placeholder (plain JS)
        console.log("CHTL JS script loaded.");
    }
}
