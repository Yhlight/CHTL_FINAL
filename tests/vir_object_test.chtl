html {
    body {
        button { id: "btn1", text: "Button 1"; }
        button { id: "btn2", text: "Button 2"; }

        script {
            vir myListener = listen {
                click: () => { alert("Button 1 was clicked!"); }
            };

            // This is the key part of the test:
            // We are reusing the 'click' callback from the 'myListener' vir object
            // and applying it to a different element.
            {{#btn2}}.addEventListener('click', myListener->click);
        }
    }
}
