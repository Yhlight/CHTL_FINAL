// CHTL模板测试文件

// 样式组模板
[Template] @Style DefaultText
{
    color: "black";
    line-height: 1.6;
    font-size: 16px;
}

// 元素模板
[Template] @Element Box
{
    div
    {
        style
        {
            width: 200px;
            height: 200px;
            background-color: red;
        }
    }
    
    div
    {
        style
        {
            width: 200px;
            height: 200px;
            background-color: blue;
        }
    }
}

// 变量组模板
[Template] @Var ThemeColor
{
    primaryColor: "rgb(255, 192, 203)";
    secondaryColor: "rgb(145, 155, 200)";
    textColor: "black";
}

// 使用模板
html
{
    head
    {
        title
        {
            text
            {
                CHTL Template Test
            }
        }
    }

    body
    {
        div
        {
            id: main-container;
            class: container;
            
            style
            {
                @Style DefaultText;
            }
            
            h1
            {
                text
                {
                    Template Test Page
                }
            }
            
            @Element Box;
        }
    }
}