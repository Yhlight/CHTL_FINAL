html
{
    head
    {
        style
        {
            // Global style tests
            body
            {
                margin: 2 * 10px; // 20px
            }

            .global-test
            {
                font-size: 10px + 6px; // 16px
                padding: 100% / 5;     // 20%
            }
        }
    }

    body
    {
        div
        {
            id: main-box;
            style
            {
                // Inline style tests
                width: 100px + 50px;      // 150px
                height: 300px - 20px;     // 280px
                left: 10px * 5;           // 50px
                top: 100px / 2;         // 50px
                border-width: 2.5px * 2;  // 5px
                opacity: 12 % 10;         // 2 (modulo, unitless)
                z-index: 2 ** 3;          // 8 (power, unitless)
            }
        }

        span
        {
            class: "global-test"; // This should get the styles from the global block
            style
            {
                // Test with mixed units (should fallback)
                // This should not be calculated and should render as is
                margin: 10px + 5em;

                // Test with invalid operation (should fallback)
                color: "red" + "blue";
            }
        }
    }
}
