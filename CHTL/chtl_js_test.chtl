div
{
    class: test-box;
    
    style
    {
        .box
        {
            width: 100px;
            height: 100px;
            background-color: red;
        }
    }
    
    script
    {
        {{box}}.addEventListener('click', () => {
            console.log('Box clicked!');
        });
        
        {{&}}->addEventListener('click', () => {
            console.log('Box clicked!');
        });
    }
}

// 测试增强选择器
script
{
    {{box}}.textContent()
    {{.box}}
    {{#box}}
    {{button}}
    {{.box button}}
    {{button[0]}}
}

// 测试动画
const anim = animate
{
    target: {{选择器}} || [{{选择器1}}, {{选择器2}}] || DOM对象
    duration: 100
    easing: ease-in-out
    
    begin:
    {
        opacity: 0
    }
    
    when:
    [
        {
            at: 0.5
            opacity: 0.5
        }
    ]
    
    end:
    {
        opacity: 1
    }
}

// 测试监听器
