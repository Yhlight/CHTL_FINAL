// 模板系统测试
// 测试样式组模板、元素模板、变量组模板

[Template] StyleGroup {
    name: "ButtonStyle";
    
    style {
        background-color: "var(--primary-color)";
        color: "white";
        padding: "10px 20px";
        border: "none";
        border-radius: "5px";
        cursor: "pointer";
        
        &:hover {
            background-color: "var(--primary-hover)";
        }
    }
}

[Template] Element {
    name: "Button";
    inherit: "ButtonStyle";
    
    content {
        button {
            class: "btn";
            text: "Click Me";
        }
    }
}

[Template] VarGroup {
    name: "Theme";
    
    variables {
        --primary-color: "#007bff";
        --primary-hover: "#0056b3";
        --secondary-color: "#6c757d";
        --text-color: "#333";
    }
}

// 使用模板
[Custom] StyleGroup {
    name: "CustomButton";
    inherit: "ButtonStyle";
    
    style {
        background-color: "var(--secondary-color)";
        border-radius: "10px";
    }
}

[Custom] Element {
    name: "CustomButton";
    inherit: "Button";
    
    content {
        button {
            class: "btn custom-btn";
            text: "Custom Button";
        }
    }
}

// 应用主题
[Custom] VarGroup {
    name: "CustomTheme";
    inherit: "Theme";
    
    variables {
        --primary-color: "#28a745";
        --primary-hover: "#1e7e34";
    }
}

// 使用自定义元素
div {
    class: "app";
    
    CustomButton;
    CustomButton;
    CustomButton;
}