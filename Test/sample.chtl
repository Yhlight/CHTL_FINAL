[Namespace] MyWebApp {

    [Template] @Var Theme {
        brandColor: "#007bff";
        darkText: "#343a40";
    }

    [Template] @Style BaseButton {
        padding: "10px 15px";
        border: "none";
        border-radius: 5px;
        color: Theme(darkText);
    }

    [Template] @Style PrimaryButton {
        @Style BaseButton;
        background-color: Theme(brandColor);
    }

    [Custom] @Element SpecialCard {
        // Not implemented by generator yet, but should parse
    }

    html {
        body {
            div {
                id = "header";
                padding: 20;

                button {
                    @Style PrimaryButton;
                    text { "Click Me" }
                }
            }

            div {
                width: #header.padding * 10; // 20 * 10 = 200
                height: 150;
                background-color: width > 180 ? "green" : "red";
            }

            [Origin] @Html {
                <p>Raw HTML.</p>
            }
        }
    }
}
