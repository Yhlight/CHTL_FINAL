// CHTL Final Integration Test for Templates/Customs

[Template] @Var Theme {
    textColor: "#333";
    brandColor: "blue";
}

[Template] @Style Base {
    font-family: "sans-serif";
    color: Theme(textColor);
}

[Custom] @Style Button {
    @Style Base;
    padding;
    border: "1px solid #ccc";
    background-color: "white";
}

html {
    body {
        button {
            @Style Button {
                padding: "10px 20px";
                delete border;
                background-color: Theme(brandColor);
            }
            text { "Click Me!" }
        }
    }
}
