use html5;

div
{
    id: main;
    class: container;
    
    text
    {
        Hello, CHTL World!
    }
    
    style
    {
        .container
        {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        &:hover
        {
            background-color: #f0f0f0;
        }
    }
    
    h1
    {
        text
        {
            Welcome to CHTL
        }
        
        style
        {
            color: #333;
            font-size: 2em;
            text-align: center;
        }
    }
    
    p
    {
        text
        {
            This is a paragraph with some text content.
        }
        
        style
        {
            color: #666;
            line-height: 1.6;
            margin: 10px 0;
        }
    }
}