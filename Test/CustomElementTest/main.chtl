[Custom] @Element Card {
    div {
        class: "card";
        h2 {
            class: "card-title";
            text: "Default Title";
        }
        p {
            class: "card-body";
            text: "Default body text.";
        }
        div {
            class: "card-footer";
        }
    }
}

html {
    body {
        // Use the Card, but specialize it
        @Element Card {
            // 1. Targeted Styling with index
            div[0] {
                style {
                    border: 1px solid #ccc;
                    border-radius: 8px;
                }
            }

            // 2. Change text by replacing the node
            insert replace h2[0] {
                h2 {
                    class: "card-title";
                    text: "Specialized Title";
                }
            }

            // 3. Delete an element
            delete p[0];

            // 4. Insert a new element
            insert at bottom div[0] { // at bottom is a simplification, will insert in the footer
                button {
                    class: "btn";
                    text: "Click Me";
                }
            }
        }
    }
}
