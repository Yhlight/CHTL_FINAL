[Template] @Style BaseStyle {
    border: 1px solid black;
    padding: 10px;
    font-family: Arial;
}

[Custom] @Style Text {
    @Style BaseStyle;
    color,
    font-size;
    delete font-family;
}

html {
    body {
        p {
            style {
                @Style Text {
                    color: blue;
                    font-size: 20px;
                    // This should override the one from BaseStyle
                    border: 2px dotted red;
                }
            }
        }

        span {
            style {
                @Style Text {
                    color: green;
                    // This should fail, because font-size is not provided
                }
            }
        }
    }
}
