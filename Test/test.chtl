// This is a test CHTL file.

[Template] @Style DefaultText {
    color: black;
    font-size: 16px;
}

[Template] @Element MyBox {
    div {
        class: "box";
        text { "This is a box from a template." }
    }
}

html {
    head {
        title {
            text { "My CHTL Page" }
        }
        link {
            rel: "stylesheet";
            href: "style.css";
        }
    }
    body {
        div {
            id: "main-container";
            class: "container";

            style {
                width: 100px;
                height: 200px;
                background-color: red;
                @Style DefaultText;
            }

            h1 {
                text { "Welcome to CHTL!" }
            }

            p {
                text {
                    "This is a paragraph."
                }
            }
            @Element MyBox;
        }
    }
}
