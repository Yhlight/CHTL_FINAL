// This is a simple test file for the CHTL compiler.
// The generator should wrap this content in <html> and <body> tags.

h1 {
    class: "main-title";
    style {
        // This will become an inline style
        color: blue;
        // This will be extracted to the global stylesheet
        .main-title {
            text-decoration: underline;
        }
    }
    text { "Welcome to CHTL" }
}

/* A multi-line comment */
div {
    id = "container"; // Test '=' as well as ':'
    class: content-box; // Test unquoted attribute value
    style {
        width: 100px + 20px * 2;
        height: 300px - 50px;
        background-color: red;
        padding: 2**8px;
    }
}

p {
    text { This is an unquoted test }
}

// Test a self-closing tag with attributes
img {
    src: "image.jpg";
    alt: "A test image";
}

// Test for auto-attribute generation and contextual selectors
div {
    style {
        .auto-class {
            border: 1px solid black;
        }
        &:hover {
            background-color: #f0f0f0;
        }
    }
    text { "This div should have a class." }
}
