div {
    id: "test-box";
    style {
        width: 100;
        height: 200;

        // Simple ternary
        background-color: 1 > 0 ? "green" : "red";

        // Comparison and property access
        border: width > 50 ? "1px solid black" : "none";

        // Complex expression with logical operators
        box-shadow: width > 50 && height > 150 ? "5px 5px 10px #888" : "none";

        // Arithmetic
        font-size: 10 + 6;

        // String comparison
        outline: "test" == "test" ? "2px solid blue" : "none";
    }
    text {
        "This box should have a green background, a black border, a shadow, and a blue outline."
    }
}
