html {
    head {
        title { text: "Dynamic If Test"; }
    }
    body {
        // The source of the dynamic value
        div {
            id: "source-box";
            style {
                width: 150px;
            }
        }

        // A static element that should always appear
        h1 { text: "Test Content"; }

        // The dynamic if block
        if {
            condition: {{source-box}}->width > 100,

            p {
                id: "then-branch-content";
                text: "The box is wide.";
            }
        } else {
            p {
                id: "else-branch-content";
                text: "The box is narrow.";
            }
        }
    }
}
