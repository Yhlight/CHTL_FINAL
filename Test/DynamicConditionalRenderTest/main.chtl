html {
    head {
        style {
            body { margin: 0; }
            #source {
                width: 50px;
                height: 50px;
                background-color: blue;
                transition: width 0.5s;
            }
            #target {
                width: 50px;
                height: 50px;
                background-color: orange;
            }
        }
    }
    body {
        div { id: "source"; }

        div {
            id: "target";
            if {
                condition: {{#source}}.width > 100px,
                display: "none"
            }
        }

        script {
            const source = document.getElementById('source');
            setTimeout(() => {
                source.style.width = '200px';
            }, 100);
        }
    }
}
