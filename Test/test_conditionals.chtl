div {
    id: "test-box";
    style {
        width: 100;
        height: 200;

        // Simple ternary
        background-color: 1 > 0 ? "green" : "red";

        // Comparison and property access
        border: width > 50 ? "1px solid black" : "none";

        // Complex expression
        box-shadow: width > 50 && height > 150 ? "5px 5px 10px #888" : "none";

        // Arithmetic
        font-size: 10 + 6; // should be 16

        // Chained ternary (not supported by parser yet, but good to have)
        // outline: width > 200 ? "blue" : (width > 100 ? "purple" : "orange");
    }
    text {
        "This box should have a green background, a black border, and a shadow."
    }
}
