[Template] @Var Theme {
    primaryColor: "blue";
    secondaryColor: "grey";
}

html {
    body {
        div {
            // Standard usage
            style {
                background-color: Theme(primaryColor);
                border-color: Theme(secondaryColor);
            }
        }
        div {
            // Specialized usage
            style {
                background-color: Theme(primaryColor = "green");
                border-color: Theme(secondaryColor);
            }
        }
    }
}
