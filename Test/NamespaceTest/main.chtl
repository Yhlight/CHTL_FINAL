// A namespace for some basic components
[Namespace] ns1 {
    [Template] @Element Box {
        div {
            class: "ns1-box";
            text: "Box from ns1";
        }
    }
}

// A nested namespace that uses a component from its parent
[Namespace] ns1 {
    [Namespace] ns2 {
        [Template] @Element SpecialBox {
            div {
                class: "ns2-special";
                // Implicitly uses 'Box' from parent 'ns1'
                @Element Box;
            }
        }
    }
}

// A separate, un-braced namespace
[Namespace] unbraced_ns

[Template] @Element UnbracedBox {
    div {
        class: "unbraced-box";
        // Implicitly uses 'Box' from the other namespace 'ns1'
        @Element Box;
    }
}

html {
    head {
        title { text: "Namespace Test"; }
    }
    body {
        // Explicitly use a template from a nested namespace
        @Element SpecialBox from ns1.ns2;

        // Use a template from the un-braced namespace
        @Element UnbracedBox;
    }
}
