[Namespace] space
{
    [Template] @Element Box
    {
        div
        {
            style
            {
                width: 100px;
                height: 100px;
                background-color: blue;
            }
            text: "This is a box from the 'space' namespace.";
        }
    }

    [Namespace] room
    {
        [Template] @Element SpecialBox
        {
             div
             {
                style
                {
                    border: 1px solid black;
                }
                // This implicitly uses 'Box' from the parent 'space' namespace
                @Element Box;
             }
        }
    }
}

