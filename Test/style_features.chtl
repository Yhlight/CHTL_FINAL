// Test file for advanced style features

body {
    // Test case 1: Auto-add class and inline style
    div {
        style {
            // Should become inline style
            border: "1px solid green";

            // Should add class="box" and a global CSS rule
            .box {
                width: 100px;
                height: 100px;
            }
        }
    }

    // Test case 2: Use existing id for contextual selector
    p {
        id: "my-para";
        style {
            // Should become #my-para:hover in CSS
            &:hover {
                color: "red";
            }
        }
    }

    // Test case 3: Auto-add id and use for contextual selector
    span {
        style {
            #important {
                font-weight: "bold";
            }

            // Should become #important::after
            &::after {
                content: "'!'";
            }
        }
    }
}
