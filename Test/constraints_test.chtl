// Test for the 'except' constraint system

div {
    // Test 1: Precise name constraint
    id: "container1";
    except span;

    h1 { text { "Container 1" } }
    p { text { "This is allowed." } }
    span { text { "This should be disallowed and not appear." } }
}

div {
    // Test 2: Type constraint
    id: "container2";
    except @Html;

    p { text { "This HTML element should be disallowed." } }

    // Note: The current implementation doesn't check @Element usage yet,
    // so this would not be caught, which is expected for now.
    // @Element SomeCustomThing;
}

div {
    // Test 3: Inherited constraint
    id: "grandparent";
    except button;

    div {
        id: "parent";
        h2 { text { "Nested containers" } }
        div {
            id: "child";
            button { text { "This button is deep inside but should be disallowed by grandparent." } }
        }
    }
}
